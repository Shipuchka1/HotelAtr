@using HotelAtr.DAL.Model
@model List<RoomType>

<section class="room-area pt-90">
    <div class="container">
        <div class="row">
            <div class="col-md-8 col-md-offset-2">
                <div class="section-title text-center">
                    <h3>our favorite rooms</h3>
                    <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam</p>
                </div>
            </div>
        </div>
    </div>
    <div class="container-fluid">
        @foreach (RoomType item in Model)
        {
            <div class="single-room small">
                <img src="@item.PathImg" alt="Image" width="450" height="500" >
                <div class="room-hover text-center">
                    <div class="hover-text">
                        <h3><a href="room-details.html">@item.Name</a></h3>
                        <p>@item.Description</p>
                        <div class="room-btn">
                            <a href="room-details.html" class="default-btn">DETAILS</a>
                        </div>
                    </div>
                    <div class="p-amount">
                        <span>@item.Cost</span>
                        <span class="count">Per Night</span>
                    </div>
                </div>
            </div>
        }
    </div>
</section>
