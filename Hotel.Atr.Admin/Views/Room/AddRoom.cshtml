@model HotelAtr.DAL.Model.Room
@{
                /**/

                ViewBag.Title = "AddRoom";
}

<h2>AddRoom</h2>
@*@Html.ValidationSummary()*@
@using (Html.BeginForm())
{
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <label class="control-label">Тип комнаты</label>
                <div>
                    @Html.DropDownListFor(model =>
Model.RoomTypeId,
(List<SelectListItem>)ViewBag.RoomTypeList, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label">Площадь</label>
                <div>
                    @Html.HiddenFor(f => Model.RoomId)
                    @Html.TextBoxFor(f => f.Square, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label">Количество людей</label>
                <div>
                    @Html.TextBoxFor(f => Model.CountOfPerson, new { @class = "form-control", type = "number" })
                </div>
            </div>
   
            <div class="form-group">
                <label class="control-label">Floor</label>
                <div>
                    @Html.TextBoxFor(f => Model.Floor, new { @class = "form-control", type = "number" })
                </div>
            </div>
            @if (Model == null)
    {
        <button class="btn btn-success" type="submit" name="action" value="Add">Add</button>
}
else
{
        <button class="btn btn-success" type="submit" name="action" value="Save">Save</button>
}


        </div>
    </div>
}


